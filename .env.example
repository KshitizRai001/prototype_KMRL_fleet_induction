# Environment Configuration
ENVIRONMENT=development

# Django Configuration
SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,.netlify.app

# Database Configuration for Development (Replit)
DATABASE_URL=postgresql://user:password@host:port/database

# Database Configuration for Production (Supabase)
SUPABASE_DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres

# Frontend Configuration
# Base for Netlify Functions (Express)
VITE_API_BASE_URL=/.netlify/functions
# Django API base for production (e.g., https://your-django-host)
VITE_DJANGO_API_BASE=https://your-django-host
# Netlify Functions -> Django backend base URL
DJANGO_API_URL=https://your-django-host

# CORS Configuration
FRONTEND_URL=https://your-site.netlify.app
NETLIFY_URL=https://your-site.netlify.app